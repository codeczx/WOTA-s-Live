<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="io.github.wotaslive.photo.PhotoViewModel" />

        <variable
            name="eventHandler"
            type="io.github.wotaslive.photo.PhotoActivity" />
    </data>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()->eventHandler.onBackPressed()}"
        android:onLongClick="@{()->eventHandler.onImageLongClick()}"
        app:imageUrl="@{viewModel.url}" />
</layout>